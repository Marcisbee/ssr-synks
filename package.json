{
  "name": "resync",
  "version": "0.1.0",
  "description": "",
  "main": "dist/core/index.js",
  "module": "dist/core/index.js",
  "engines": {
    "node": ">=10.x"
  },
  "bin": {
    "resync": "bin/resync.js"
  },
  "scripts": {
    "serve": "serve",
    "build": "npm run build:core && npm run build:cli",
    "build:core": "esbuild src/core/index.ts --bundle --outdir=dist/core --target=es2015 --platform=browser --sourcemap --log-level=error",
    "build:cli": "esbuild src/index.ts --bundle --outdir=dist/cli --format=cjs --external:esbuild --external:ws --platform=node --sourcemap --log-level=error",
    "start": "node dist/cli/index.js",
    "dev": "npm start --prefix ./app",
    "test": "node node_modules/jest/bin/jest.js",
    "uvu": "uvu src/core",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Marcisbee/ssr-synks.git"
  },
  "author": "Marcis <marcisbergmanis@gmail.com> Bergmanis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Marcisbee/ssr-synks/issues"
  },
  "homepage": "https://github.com/Marcisbee/ssr-synks#readme",
  "dependencies": {
    "esbuild": "^0.8.2",
    "node-cookie": "^2.1.2",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^26.0.15",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.6.2",
    "serve": "^11.3.2",
    "uvu": "^0.4.0-next.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "13.2"
          },
          "modules": "commonjs"
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "ignorePatterns": [
      "app",
      "dist"
    ],
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "simple-import-sort"
    ],
    "overrides": [
      {
        "files": [
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "import/prefer-default-export": "off",
      "import/no-cycle": "off",
      "default-case": "off",
      "no-useless-return": "off",
      "no-underscore-dangle": "off",
      "no-restricted-syntax": "off",
      "no-param-reassign": "off",
      "no-return-assign": "off",
      "no-await-in-loop": "off",
      "guard-for-in": "off",
      "consistent-return": "off",
      "new-cap": "off",
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "simple-import-sort/sort": "error"
    }
  }
}
