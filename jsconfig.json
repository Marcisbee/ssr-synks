{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "baseUrl": ".",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "checkJs": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "coverage",
    "test",
    "app",
    "**/*.spec.js",
    "node_modules"
  ]
}
